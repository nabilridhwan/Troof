{
	"name": "troof",
	"private": true,
	"version": "1.0.0",
	"main": "index.js",
	"repository": "https://github.com/nabilridhwan/GameNight.git",
	"author": "Nabil Ridhwan <nabridhwan@gmail.com>",
	"license": "MIT",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"start:services": "turbo run start --scope=services",
		"start:troof": "turbo run start --scope=web",
		"start:all": "turbo run start",
		"start:clean": "turbo start --no-cache --force",
		"prettier": "prettier --write .",
		"dev": "turbo run dev",
		"build:troof": "pnpm i && pnpm turbo run build --scope=web",
		"build:services": "pnpm i && pnpm turbo run build --scope=services",
		"build:all": "pnpm i && pnpm turbo run build"
	},
	"devDependencies": {
		"@troof/config": "*",
		"turbo": "^1.6.3"
	},
	"engines": {
		"node": ">=18 <19"
	}
}
